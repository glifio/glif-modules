{
    "name": "@glif/logger",
    "version": "2.0.0-alpha.16",
    "description": "Handles logging for GLIF apps, modules and components",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "scripts": {
        "clean": "rimraf dist/* && mkdirp dist",
        "build-browser": "cross-env BABEL_ENV=browser ../../node_modules/.bin/babel ./src --out-dir ./lib --extensions \".ts,.tsx\" --source-maps --ignore '**/__tests__'",
        "build-module": "cross-env BABEL_ENV=module ../../node_modules/.bin/babel ./src --out-dir ./module --extensions \".ts,.tsx\" --source-maps --ignore '**/__tests__'",
        "build-node": "babel ./src/ --out-dir ./dist/ --extensions \".ts,.tsx\" --source-maps --ignore '**/__tests__'",
        "build-types": "tsc --emitDeclarationOnly",
        "build": "npm run clean && npm run build-types && npm run build-node && npm run build-browser && npm run build-module",
        "lint": "tslint -p tsconfig.json",
        "prepublishOnly": "npm run build"
    },
    "author": "Infinite Scroll <squad@infinitescroll.org> (https://infinitescroll.org)",
    "license": "(Apache-2.0 OR MIT)",
    "dependencies": {
        "@sentry/browser": "^6.17.2",
        "@sentry/tracing": "^6.17.3"
    },
    "devDependencies": {
        "babel-eslint": "10.1.0",
        "prettier": "2.2.1",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0"
    },
    "files": [
        "dist",
        "lib",
        "module"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/glifio/modules/tree/primary/packages/logger"
    }
}
